

<div class="navbar-fixed-top searchbar">

  <div class="searchterm">
    <div class="search-block">
      <i class="fas fa-search"> </i>
      <%= form_tag  questions_search_path, method: :get, class: "aa-input-container", id: "aa-input-container" do %>
      <%= text_field_tag :query, params[:query], placeholder: "Which product do you need?", class: "header-form", id: "query-input", class: "aa-input-search" %>
    <% end %>
    </div>
  </div>
</div>


<div class="container-with-search-2">

<div class="container">
  <h4>Recommended <%= @category.name %></h4>
  <div class="no-gutter categories-container">
    <% @sub_categories.each do |sub_category| %>
      <% if sub_category.quiz %>

         <div class="carousel-item">
            <div class="card">
              <div class="card__image">
                <%= link_to quiz_quiz_sessions_path(sub_category.quiz), method: :post, class: "card-image-container" do %>
                <%= cl_image_tag sub_category.photo, crop: :fill%>
                <% end %>
              </div>
              <div class="card__info">
                <h2 class="card__title"><%= sub_category.name %></h2>
              </div>
            </div>
          </div>

      <% end %>
    <% end %>
  </div>
</div>
</div>


