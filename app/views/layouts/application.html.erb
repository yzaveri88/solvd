<!DOCTYPE html>
<html class="<%= params[:controller]%> <%= params[:action] %>">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>solvd</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%#= stylesheet_pack_tag 'application', media: 'all' %> <!-- Uncomment if you import CSS in app/javascript/packs/application.js -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
  </head>
  <body class="<%= params[:controller]%> <%= params[:action] %>">
    <%= favicon_link_tag asset_path('icon.png'), :rel => 'icon', :type =>  'image/png' %>
    <%#= render 'shared/navbar' %>
    <%#= render 'shared/flashes' %>
    <%= yield %>
    <% unless @hide_footer %>
      <div class="footer">
        <!-- you still have to include the links to the icons -->
        <div class="footer-links">

          <%= link_to categories_path do %>
          <i class="far fa-compass"></i>
          <% end %>


          <%= link_to profile_show_path do %>
          <i class="far fa-heart"></i>
          <% end %>

          <%= link_to profile_edit_path do %>
          <i class="far fa-user"></i>
          <% end %>

        </div>
      </div>
    <% end %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'carousel' %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>


